<Window x:Class="Praktikumsverwaltung_DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Praktikumsverwaltung_DesktopApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="428.819" Width="591.13">
    <Grid>
        <Menu x:Name="menuBar" DockPanel.Dock="Top" HorizontalAlignment="Left" Height="19" VerticalAlignment="Top" Width="583">
            <MenuItem Header="Entry" >
                <MenuItem x:Name="mItemEntryAdd" Header="Add" Click="mItemEntryAdd_Click" />
                <MenuItem x:Name="mItemEntryRemove" Header="Remove" />
                <MenuItem x:Name="mItemEntryEdit" Header="Edit" />
                <MenuItem x:Name="mItemEntryShow" Header="Show" />
            </MenuItem>
            <MenuItem Header="Profile" >
                <MenuItem x:Name="mItemProfileEdit" Header="Edit" />
                <MenuItem x:Name="mItemProfileShow" Header="Show" />
            </MenuItem>
        </Menu>
        <ListView x:Name="lvEntries" HorizontalAlignment="Left" Height="351" Margin="0,48,-0.2,0" VerticalAlignment="Top" Width="585">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Description" Width="350"/>
                    <GridViewColumn Header="Location" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
